{
  "src_folders" : ["./tests/e2e/specs"],
  "output_folder" : "./tests/e2e/reports",
  "page_objects_path" : "./tests/e2e/page-objects",
  "custom_assertions_path" : ["./tests/e2e/custom-assertions"],
  "custom_commands_path": ["./tests/e2e/custom-commands"],
  "globals_path" : "./tests/e2e/globals.js",
  "live_output" : false,
  "parallel_process_delay" : 10,
  "disable_colors": true,
  "test_workers" : false,
  "test_settings" : {
    "default": {
      "use_xpath": true,
      "globals" : {
        "login_usr" : "xrd",
        "login_pwd" : "secret",
        "login_wrong_usr" : "foo",
        "login_wrong_pwd" : "bar",
        "login_security_officer" : "xrd-sec",
        "login_registration_officer" : "xrd-reg",
        "login_service_administrator" : "xrd-ser",
        "login_system_administrator" : "xrd-sys",
        "login_securityserver_observer" : "xrd-obs",
        "logout_timeout_ms" : 60000,
        "e2etest_testdata" : "/../testdata"
      },
      "screenshots" : {
        "enabled" : true,
        "on_failure" : true,
        "on_error" : true,
        "path" : "./tests/e2e/screenshots"
      }
    },
    "chrome": {
      "desiredCapabilities" : {
        "browserName" : "chrome",
        "javascriptEnabled" : true,
        "acceptSslCerts" : true,
        "acceptInsecureCerts": true,
        "chromeOptions" : {
          "w3c": false,
          "prefs" : {
            "download": {
            }
          },
          "args" : ["--window-size=1280,900"]
        }
      }
    }
  }
}

